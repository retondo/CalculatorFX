<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox spacing="10" alignment="CENTER" prefWidth="250" prefHeight="270" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.batata.calculator.Controller">
	
	<fx:define>
		<Font fx:id="FONT_OUTPUT" size="30"/>
		<Font fx:id="FONT" size="18"/>
	</fx:define>

	<StackPane alignment="CENTER" >
		<Rectangle width="230" height="70" fill="TRANSPARENT" stroke="GRAY"/>
		<Text fx:id="output" font="$FONT_OUTPUT" textAlignment="RIGHT"/>
	</StackPane>
	
	<HBox spacing="10" alignment="CENTER">
		<Button text="7" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="8" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="9" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="/" prefWidth="50" font="$FONT" onAction="#onOperatorClick"/>
	</HBox>
	
	<HBox spacing="10" alignment="CENTER">
		<Button text="4" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="5" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="6" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="*" prefWidth="50" font="$FONT" onAction="#onOperatorClick"/>
	</HBox>
	
	<HBox spacing="10" alignment="CENTER">
		<Button text="1" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="2" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="3" prefWidth="50" font="$FONT" onAction="#onNumberClick"/>
		<Button text="-" prefWidth="50" font="$FONT" onAction="#onOperatorClick"/>
	</HBox>
	
	<HBox spacing="10" alignment="CENTER">
		<Button text="0" prefWidth="110" font="$FONT" onAction="#onNumberClick"/>
		<Button text="=" prefWidth="50" font="$FONT" onAction="#onOperatorClick"/>
		<Button text="+" prefWidth="50" font="$FONT" onAction="#onOperatorClick"/>
	</HBox>
	
</VBox>
